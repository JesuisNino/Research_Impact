-# frozen_string_literal: true
= simple_form_for(@invitation) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :email
    = f.input :projecttitle
    = f.input :projectid

  .form-actions
    = f.button :submit
